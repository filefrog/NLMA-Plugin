#!/usr/bin/perl

use warnings;
use strict;

use Getopt::Long;
my %OPTIONS = (exit => 0);
GetOptions(\%OPTIONS,
	'signal=s',
	'exit=i',

	'port|p=i',
	'host|H=s',
	'config|c=s',
);

print "t/bin/die - read all of STDIN and then exit or die\n";
while (<STDIN>) { }

if (exists $OPTIONS{signal}) {
	print STDERR "killed via signal $OPTIONS{signal}\n";
	kill $OPTIONS{signal}, $$;
	while (1) { sleep 1337; }
}

print STDERR "exiting $OPTIONS{exit}\n";
exit $OPTIONS{exit};
